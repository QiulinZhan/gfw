<resources>
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="windowNoTitle">false</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorAccent">@color/theme_accent</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="android:alertDialogTheme">@style/BaseTheme.Dialog</item>
        <item name="android:textColorPrimary">@color/theme_window_background</item>
    </style>
    <style name="AppTheme" parent="AppThemeBase"/>
    <style name="AppTheme.Welcome" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="colorPrimaryDark">@color/welcomeColorPrimaryDark</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>
    <style name="Dialog">
    </style>

    <style name="BaseTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/theme_default_primary</item>
        <item name="colorPrimaryDark">@color/theme_default_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@animator/push_bottom_in</item>
        <item name="android:windowExitAnimation">@animator/push_bottom_out</item>
    </style>
    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <style name="MyStyle" parent="android:Animation">
        //进入时的动画
        <item name="@android:windowEnterAnimation">@anim/head_in</item>
        //退出时的动画
        <item name="@android:windowExitAnimation">@anim/head_out</item>
    </style>
    <style name="IndexFont">
        <item name="android:textSize">@dimen/index_text_size_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="NetDisk" />
    <style name="NetDisk.TextAppearance" parent="@style/NetDisk">
        <item name="android:textColor">@color/text_default</item>
    </style>
    <style name="NetDisk.TextAppearance.Huge" parent="@style/NetDisk.TextAppearance">
        <item name="android:textSize">20.0dip</item>
    </style>
    <style name="NetDisk.TextAppearance.Large" parent="@style/NetDisk.TextAppearance">
        <item name="android:textSize">18.0dip</item>
    </style>
    <style name="NetDisk.TextAppearance.Large.White" parent="@style/NetDisk.TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NetDisk.TextAppearance.Middle" parent="@style/NetDisk.TextAppearance">
        <item name="android:textSize">15.0dip</item>
    </style>

    <style name="NetDisk.TextAppearance.Middle.White" parent="@style/NetDisk.TextAppearance.Middle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NetDisk.TextAppearance.Small" parent="@style/NetDisk.TextAppearance">
        <item name="android:textSize">12.0dip</item>
    </style>
    <style name="NetDisk.TextAppearance.Content" parent="@style/NetDisk.TextAppearance">
        <item name="android:textSize">16.0dip</item>
    </style>
    <style name="NetDisk.TextAppearance.Content.Gray" parent="@style/NetDisk.TextAppearance.Content">
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="NetDisk.TextAppearance.Content.White" parent="@style/NetDisk.TextAppearance.Content">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NetDisk.TextAppearance.Content.Red" parent="@style/NetDisk.TextAppearance.Content">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="NetDisk.TextAppearance.Content.Blue" parent="@style/NetDisk.TextAppearance.Content">
        <item name="android:textColor">@color/progress_blue</item>
    </style>
    <style name="NetDisk.TextAppearance.Content.loginOtherAuth" parent="@style/NetDisk.TextAppearance.Content">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/login_other_auth</item>
    </style>
    <style name="NetDisk.TextAppearance.Middle.EmptyInfo" parent="@style/NetDisk.TextAppearance.Middle">
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="NetDisk.TextAppearance.Middle.TitleWhite" parent="@style/NetDisk.TextAppearance.Middle">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="NetDisk.TextAppearance.Huge.TitleWhite" parent="@style/NetDisk.TextAppearance.Huge">
        <item name="android:textColor">@color/white</item>
    </style>




</resources>
